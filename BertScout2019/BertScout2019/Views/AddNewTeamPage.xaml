<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BertScout2019.Views.AddNewTeamPage"
             Title="Add New Team">
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal">
            <Label 
                    Text="Number: "
                    FontSize="24"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    />
            <Entry 
                    x:Name="Add_New_Team"
                    Text=""
                    FontSize="24"
                    IsSpellCheckEnabled="False"
                    IsTextPredictionEnabled="False"
                    TextChanged="Add_New_Team_TextChanged"
                    VerticalOptions="Start"
                    />
            <Button
                    x:Name="Add_NewTeam"
                    Text="Add"
                    FontSize="24"
                    Clicked="Add_NewTeam_Clicked"
                    VerticalOptions="Start"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>