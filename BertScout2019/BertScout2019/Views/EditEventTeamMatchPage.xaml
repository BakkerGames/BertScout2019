                        />
                    <Button Text="Lots" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Cooperation:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Button Text="None" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Some" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Lots" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Fouls:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Button Text="None" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Some" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Lots" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Broken:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Button Text="None" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Some" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Lots" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>

                <!-- GAMEPLAY -->

                <StackLayout
                HorizontalOptions="Fill"
                BackgroundColor="#22BE1C">
                    <Label
                    Text="Results" 
                    HorizontalOptions="Center"
                    BackgroundColor="#22BE1C"
                    FontSize="Large"
                />
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Alliance Result:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Button Text="Lost" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Tied" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Won" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Rocket Ranking Point:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Button Text="No" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Yes" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Hab Ranking Point:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Button Text="No" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Yes" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>