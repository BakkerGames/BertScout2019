<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BertScout2019.Views.EditEventTeamMatchPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            Margin="10,10,10,10"
            >

                <!-- SANDSTORM -->

                <StackLayout
                HorizontalOptions="Fill"
                BackgroundColor="#22BE1C">
                    <Label
                    Text="Sandstorm" 
                    HorizontalOptions="Center"
                    BackgroundColor="#22BE1C"
                    FontSize="Large"
                />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Movement Type:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Button Text="None"
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Tele"
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Auto"
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Drove Off Platform:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Button Text="None" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="1" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="2" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Hatches Placed:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Label Text="0"
                       FontSize="24"
                       WidthRequest="80"
                       Margin="0,10,0,0"
                       />
                    <Button Text="-" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="+" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Cargo Placed:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Label Text="0"
                       FontSize="24"
                       WidthRequest="80"
                       Margin="0,10,0,0"
                       />
                    <Button Text="-" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="+" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>

                <!-- MAIN GAME -->

                <StackLayout
                HorizontalOptions="Fill"
                BackgroundColor="#22BE1C">
                    <Label
                    Text="Main Game" 
                    HorizontalOptions="Center"
                    BackgroundColor="#22BE1C"
                    FontSize="Large"
                />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Cargo Ship Hatches:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Label Text="0"
                       FontSize="24"
                       WidthRequest="80"
                       Margin="0,10,0,0"
                       />
                    <Button Text="-" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="+" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Cargo Ship Cargo:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Label Text="0"
                       FontSize="24"
                       WidthRequest="80"
                       Margin="0,10,0,0"
                       />
                    <Button Text="-" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="+" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Rocket Hatches:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Label Text="0"
                       FontSize="24"
                       WidthRequest="80"
                       Margin="0,10,0,0"
                       />
                    <Button Text="-" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="+" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Rocket Cargo:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Label Text="0"
                       FontSize="24"
                       WidthRequest="80"
                       Margin="0,10,0,0"
                       />
                    <Button Text="-" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="+" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Highest Rocket Hatch:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Label Text="0"
                       FontSize="24"
                       WidthRequest="80"
                       Margin="0,10,0,0"
                       />
                    <Button Text="-" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="+" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Highest Rocket Cargo:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Label Text="0"
                       FontSize="24"
                       WidthRequest="80"
                       Margin="0,10,0,0"
                       />
                    <Button Text="-" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="+" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>

                <!-- END GAME -->

                <StackLayout
                HorizontalOptions="Fill"
                BackgroundColor="#22BE1C">
                    <Label
                    Text="End Game" 
                    HorizontalOptions="Center"
                    BackgroundColor="#22BE1C"
                    FontSize="Large"
                />
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Climbed Platform:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Label Text="0"
                       FontSize="24"
                       WidthRequest="80"
                       Margin="0,10,0,0"
                       />
                    <Button Text="-" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="+" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Buddy Climb:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
                       />
                    <Button Text="None" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="Lift" 
                        FontSize="24"
                        WidthRequest="90"
                        />
                    <Button Text="On"
                        FontSize="24"
                        WidthRequest="90"
                        />
                </StackLayout>

                <!-- GAMEPLAY -->

                <StackLayout
                HorizontalOptions="Fill"
                BackgroundColor="#22BE1C">
                    <Label
                    Text="Gameplay" 
                    HorizontalOptions="Center"
                    BackgroundColor="#22BE1C"
                    FontSize="Large"
                />
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Defense:"
                       FontSize="24"
                       Margin="0,10,0,0"
                       WidthRequest="295"
